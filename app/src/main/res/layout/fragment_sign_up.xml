    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="36dp"
        android:text="OR"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/signUpGoogle_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUp_btn" />

    <ImageView
        android:id="@+id/signUpTwitter_btn"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginEnd="72dp"
        android:src="@drawable/twittericon"
        app:layout_constraintBottom_toBottomOf="@+id/signUpGoogle_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signUpGoogle_btn"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/signUpGoogle_btn"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/googleicon"
        app:layout_constraintEnd_toStartOf="@+id/signUpTwitter_btn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/signUpFacebook_btn"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/facebookicon"
        app:layout_constraintBottom_toBottomOf="@+id/signUpGoogle_btn"
        app:layout_constraintEnd_toStartOf="@+id/signUpGoogle_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signUpGoogle_btn"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="181dp"
        android:layout_marginEnd="182dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUp_btn" />
