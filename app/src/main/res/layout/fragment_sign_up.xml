<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDF1"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/signUpTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="14dp"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/welcomBackTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_goneMarginTop="20dp" />

    <TextView
        android:id="@+id/welcomBackTxt"
        android:layout_width="365dp"
        android:layout_height="0dp"
        android:layout_marginBottom="31dp"
        android:text="Save delicious recipes and get personalized content"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/email_in_sign_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signUpTxt" />

    <EditText
        android:id="@+id/email_in_sign_et"
        android:layout_width="381dp"
        android:layout_height="52dp"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Email"
        android:textColor="@color/halfDark"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/welcomBackTxt"
        app:layout_constraintTop_toBottomOf="@+id/welcomBackTxt" />

    <EditText
        android:id="@+id/password_in_sign_et"
        android:layout_width="381dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Password"
        android:textColor="@color/halfDark"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/email_in_sign_et"
        app:layout_constraintStart_toStartOf="@+id/email_in_sign_et"
        app:layout_constraintTop_toBottomOf="@+id/email_in_sign_et" />

    <EditText
        android:id="@+id/confirm_Password_in_sign_et"
        android:layout_width="381dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:textColor="@color/halfDark"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/password_in_sign_et"
        app:layout_constraintStart_toStartOf="@+id/password_in_sign_et"
        app:layout_constraintTop_toBottomOf="@+id/password_in_sign_et" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/signUp_btn"
        android:layout_width="370dp"
        android:layout_height="48dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/halfDark"
        android:textColor="@color/white"
        android:text="Sign Up"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_Password_in_sign_et" />

