<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/SplashScreenFragment">

    <fragment
        android:id="@+id/startScreenFragment"
        android:name="com.example.foodplanner.StartScreenFragment"
        android:label="Food Planenr">
        <action
            android:id="@+id/action_startScreenFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_startScreenFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.foodplanner.SignUpFragment"
        android:label="Sign Up" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.foodplanner.LoginFragment"
        android:label="Log In" />
    <fragment
        android:id="@+id/SplashScreenFragment"
        android:name="com.example.foodplanner.SplashScreenFragment"
        android:label=" " >
        <action
            android:id="@+id/action_SplashScreenFragment_to_startScreenFragment"
            app:destination="@id/startScreenFragment" />
    </fragment>


</navigation>